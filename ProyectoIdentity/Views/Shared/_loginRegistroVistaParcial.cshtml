@using Microsoft.AspNetCore.Identity;
@using ProyectoIdentity.Utils

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
         <li class="nav-item">
            <a class="nav-link text-white" href="#">@UserManager.GetUserName(User)</a>
        </li>
         <li class="nav-item">
            <a class="nav-link text-white" href="#">Rol: </a>
        </li>
        if (User.IsInRole(StringHandler.RolAdministrador))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="RegistroAdministrador"><strong>Registro Administrador</strong></a>
            </li>
        }
        <li class="nav-item">
            <form id="logoutForm" method="post", class="form-inline" asp-controller="Cuentas" asp-action="SalirAplicacion">
                <button type="submit" class="btn nav-link">Salir</button>
            </form>
        </li>
    }
    else
    {
         <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Acceso">Acceso</a>
        </li>
    }
</ul>

